<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    android:background="@drawable/border"
    android:orientation="horizontal"
    android:layout_marginLeft="21dp"
    android:layout_marginRight="21dp"
    android:layout_marginTop="30.5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_comlite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:layout_marginTop="10dp"
            android:text="Complete Below StepsTo Get "
            android:textColor="#231F20"
            android:textSize="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/txt_comlite"
            android:layout_marginTop="-5dp">

    <TextView
        android:id="@+id/txt_account_verified"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Account Verified"
        android:textColor="#231F20"
        android:fontFamily="@font/roboto"
        android:textSize="13dp"
        android:layout_marginTop="20px"/>

            <ImageView
                android:layout_width="16.01dp"
                android:layout_height="15.33dp"
                android:layout_below="@id/txt_comlite"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25px"
                android:layout_toRightOf="@id/txt_account_verified"
                android:src="@drawable/verified_logo" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/rectangle"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>


</LinearLayout>